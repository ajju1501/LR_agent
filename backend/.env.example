# Application
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# HuggingFace Configuration
HF_BASE_URL=https://router.huggingface.co/v1
HF_TOKEN=your_hf_token_here
HF_MODEL=Qwen/Qwen3-Coder-Next:novita
HF_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ChromaDB Configuration
CHROMADB_COLLECTION=loginradius_docs
CHROMADB_PERSIST_DIRECTORY=./chroma_data

# Database Configuration
DATABASE_URL=postgresql://chatbot_user:chatbot_pass@localhost:5432/lr_chatbot
DB_POOL_SIZE=10
DB_IDLE_TIMEOUT=30000

# Scraper Configuration
LOGINRADIUS_DOCS_URL=https://www.loginradius.com/docs/
SCRAPER_TIMEOUT=30000
SCRAPER_MAX_DEPTH=5
SCRAPER_RATE_LIMIT=1000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# RAG Configuration
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_RETRIEVAL_TOP_K=5
RAG_CONFIDENCE_THRESHOLD=0.5

# LoginRadius Authentication
LR_API_KEY=your_loginradius_api_key
LR_API_SECRET=your_loginradius_api_secret
LR_APP_NAME=your_app_name